<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github</groupId>
    <artifactId>nullsafe</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    <properties>  
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>  
        <maven.compiler.release>21</maven.compiler.release>  
        <exec.mainClass>com.github.nullsafe.NullsafeApp</exec.mainClass>  
        <sonar.organization>yasmramos</sonar.organization>  
        <sonar.host.url>https://sonarcloud.io</sonar.host.url>  
        <jmh.version>1.37</jmh.version>  
    </properties>  
    <dependencies>  
        <!-- Dependencias existentes -->  
        <dependency>  
            <groupId>org.junit.jupiter</groupId>  
            <artifactId>junit-jupiter-api</artifactId>  
            <version>5.12.2</version>  
            <scope>test</scope>  
        </dependency>  
      
        <!-- Nuevas dependencias para testing avanzado -->  
        <dependency>  
            <groupId>org.openjdk.jmh</groupId>  
            <artifactId>jmh-core</artifactId>  
            <version>${jmh.version}</version>  
            <scope>test</scope>  
        </dependency>  
      
        <dependency>  
            <groupId>org.openjdk.jmh</groupId>  
            <artifactId>jmh-generator-annprocess</artifactId>  
            <version>${jmh.version}</version>  
            <scope>test</scope>  
        </dependency>  
    </dependencies>  
    <build>  
        <plugins>  
            <!-- Plugins existentes mantenidos -->  
            <plugin>  
                <groupId>org.apache.maven.plugins</groupId>  
                <artifactId>maven-surefire-plugin</artifactId>  
                <version>3.5.2</version>  
            </plugin>  
          
            <plugin>  
                <groupId>org.jacoco</groupId>  
                <artifactId>jacoco-maven-plugin</artifactId>  
                <version>0.8.13</version>  
                <!-- ConfiguraciÃ³n existente mantenida -->  
            </plugin>  
          
            <!-- Nuevos plugins -->  
            <plugin>  
                <groupId>org.sonarsource.scanner.maven</groupId>  
                <artifactId>sonar-maven-plugin</artifactId>  
                <version>3.10.0.2594</version>  
            </plugin>  
          
            <plugin>  
                <groupId>com.github.spotbugs</groupId>  
                <artifactId>spotbugs-maven-plugin</artifactId>  
                <version>4.8.2.0</version>  
            </plugin>  
          
            <plugin>  
                <groupId>org.apache.maven.plugins</groupId>  
                <artifactId>maven-pmd-plugin</artifactId>  
                <version>3.21.2</version>  
            </plugin>  
          
            <plugin>  
                <groupId>org.owasp</groupId>  
                <artifactId>dependency-check-maven</artifactId>  
                <version>9.0.7</version>  
            </plugin>  
        </plugins>  
    </build>
</project>
